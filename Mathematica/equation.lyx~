\begin_body

\begin_layout Standard
We implement the equation for the evolution of the scalar field in a 3+1
 PDE solver.
 We consider an expanding universe with no metric pertubations.
 The scalar field is treated as fully non-linear.
 We need a bunch of definitions
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
K= & \,-g_{0}+g_{2}\left(X-\hat{X}\right)^{2}+g_{4}\left(X-\hat{X}\right)^{4}\\
K_{X}= & \,2g_{2}\left(X-\hat{X}\right)+4g_{4}\left(X-\hat{X}\right)^{3}\\
K_{XX}= & \,2g_{2}+12g_{4}\left(X-\hat{X}\right)^{2}\\
K_{\pi}= & \,0\\
K_{\pi X}= & \,0\,,
\end{align}

\end_inset

where
\begin_inset Formula 
\begin{align}
X= & \frac{1}{2a^{2}}\left(\pi^{\prime2}-\partial_{i}\pi\partial^{i}\pi\right)\,.
\end{align}

\end_inset

We then look at the scalar field equation
\begin_inset Formula 
\begin{align}
 & \left(K_{X}+\frac{\pi^{\prime2}}{a^{2}}K_{XX}\right)\pi^{\prime\prime}=\nonumber \\
 & \qquad\qquad a^{2}\left(K_{\pi}-\frac{\pi^{\prime2}}{a^{2}}K_{\pi X}\right)-\mathcal{H}\left(2K_{X}-\frac{\pi^{\prime2}}{a^{2}}K_{XX}\right)\pi^{\prime}\nonumber \\
 & \qquad\qquad+K_{X}\nabla^{2}\pi+K_{\pi X}\partial_{i}\pi\partial^{i}\pi+2\frac{K_{XX}}{a^{2}}\pi^{\prime}\partial_{i}\pi\partial^{i}\pi^{\prime}-\mathcal{H}\frac{K_{XX}}{a^{2}}\pi^{\prime}\partial_{i}\pi\partial^{i}\pi\nonumber \\
 & \qquad\qquad-\frac{K_{XX}}{a^{2}}\partial_{i}\pi\partial_{j}\pi\partial^{j}\partial^{i}\pi\,.
\end{align}

\end_inset

The background part of the equation reads as
\end_layout

\begin_layout Quote
\begin_inset Formula 
\[
(-\bar{\phi}^{\prime\prime}-2\mathcal{H}\bar{\phi}^{\prime})K_{X}-\frac{\bar{\phi}^{\prime}{}^{2}(\bar{\phi}^{\prime\prime}-\ \mathcal{H}\bar{\phi}^{\prime})K_{XX}}{a^{2}}=0
\]

\end_inset


\end_layout

\begin_layout Quote
\begin_inset Formula 
\[
\bar{\phi}^{\prime\prime}=\frac{1}{(K_{X}+\frac{\bar{\phi}^{\prime}{}^{2}}{a^{2}})}\left(-2\mathcal{H}\bar{\phi}^{\prime}K_{X}+\frac{\bar{\phi}^{\prime}{}^{3}\mathcal{H}K_{XX}}{a^{2}}\right)
\]

\end_inset


\end_layout

\begin_layout Quote
We are going to solve this ODE in our N-body code using a 4th order Runge
 Kutta method.
 
\end_layout

\end_body
